<section
   class="product-sec wow fadeInUp pt-3"
   data-wow-delay="0.1s"  style="min-height:800px;">
   <div class="container">
      <div class="row text-center">
         <div class="col-xs-12" >
            <h3 class="text-[20px] md:text-[30px] font-bold text-[#4d4d4d]">{{ collection.title }}</h3>
         </div>
      </div>
      <br/>
      <div class="row">
         <div class="">
            <div
               class="product-sec wow fadeInUp"
               data-wow-delay="0.2s"
               style=" width: 100%">
               <div class="product-holder row " style=" justify-content:center;">
                  {% paginate collection.products %}
                  {% for product in collection.products %}
                  <div class="product-block block col-md-3 position-relative">
                     <a href="{{ product.url }}" class="banner-shadow block w-full rounded-md">
                        <div class="flex flex-col">
                           <img
                              src="{{ product.featured_image | img_url: '800x800' }}"
                              alt="bcd"
                              class="rounded-t-md">
                           <div class="bg-white py-1 px-3 flex flex-row justify-between items-center rounded-b-md">
                              <div class="flex flex-col">
                                 <div class="slide-content-without-city" style="text-align:left;">
                                    <div class="truncate" style="color:#666;text-transform: capitalize;">{{ product.title }}</div>
                                    <div class="price" style=" text-align:left;font-size:18px; color:#333;/*color:#ec018c;/*color:#222;*/">
                                       <span style="font-size:15px;" class="moneySymbol">₹</span> <span data-inr="849" class="moneyCal">{{ product.price | money }}</span>
                                       <span style="text-decoration:line-through; font-size:16px; padding-left: 3px; color:#878787;">
                                    </div>
                                    <div style="font-size:13px;color:#888; min-height:19.5px;">
                                       Earliest Delivery:
                                       <span style="color: #66b266; font-weight: 700;">Today</span>
                                    </div>
                                    <div style="display:inline-block;color:#e7711b;font-size:14px;  padding-top:15px; ">5.0</div>
                                    <div style="display:inline-block;"><span class="stars" style="font-size: 18px" data-rating="5.0"><span class="stars-container stars-100">★★★★★</span></span> 
                                       <span style="color: #888; font-size:13px;"> 4 Reviews </span>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </a>
                  </div>
                  {% endfor %}
                  {% endpaginate %}
               </div>
            </div>
         </div>
      </div>
   </div>
</section>
