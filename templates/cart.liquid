{% if cart.item_count > 0 %}

  <section class="shoping-cat-detail px-5">
  <div class="product-title" style="    text-align: center;margin-top:30px;">
               <h1 class="text-[30px] font-Mukta font-semibold" style="font-weight: 700;font-size: 25px;" >Cart</h1>
            </div>
      </br></br>
    <form action="/cart" method="POST">
        <div class="container">
            <table>
                <thead>
                    <th>Product</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>total</th>
                </thead>
                <tbody>
                    {% for item in cart.items %}
                    <tr>
                        <td>
                            <a href="{{ item.url | within: collections.all }}">
                                <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}">
                            </a>
                        </td>
                        <td>
                            <a href="{{ item.url }}">{{ item.product.title }}</a>
                            {{ item.variant.title }}
                        </td>
                        <td>{{ item.price | money }}</td>
                        <td>
                            <input type="number" name="updates[]" id="updates_{{ item.key }}"
                                value="{{ item.quantity }}" min="0"><button type="submit"class="btn-primary button2" name="update" >Update</button>
                        </td>
                        <td>
                            {% if item.original_line_price != item.line_price %}{{ item.original_line_price | money }}{% endif %}
                            {{ item.line_price | money }}
                            {% for discount in item.discounts %}{{ discount.title }}{% endfor %}
                            <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0"> <i
                                    class='bx bx-trash'></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="row total-pay wow fadeInUp grid grid-cols-1 md:grid-cols-2 gap-5 " data-wow-delay="0.4s"
                style=" justify-content: space-around;visibility: visible; animation-delay: 0.4s; animation-name: fadeInUp;display:flex;margin-top:20px;">
                <div class="col-xs-12 col-sm-7 dataprice px-5" style="width:60%;">
                    <strong class="title">coupon</strong>
                    <form action="#" class="form">
                        <fieldset>
                            <input type="text" placeholder="Enter promotion code here" class="form-control"
                                style="height:55px">
                            <button type="submit" class="btn">apply</button>
                        </fieldset>
                    </form>
                </div>
                <div class="col-xs-12 col-sm-5 dataprice" style="width:39%;">
                    <div class="total-amunt">
                        <div class="holder">
                            <strong class="heading">Subtotal  :</strong>
                            <span class="price">{{ cart.total_price | money }}</span>
                        </div>
                        <div class="holder">
                            <strong class="heading">Tax  :</strong>
                            <span class="price">Rs. 44.91</span>
                        </div>
                        <div class="holder">
                            <strong class="heading">total  :</strong>
                            <span class="price">{{ cart.total_price |plus : 4491 | money}} </span>
                        </div>
                     
                      </div>
                  <div class="process" style="text-align: end;">
                        <br><br>
                        <button name="checkout" type="submit" class="btn-primary button1"style="margin-bottom:20px;margin-top:20px;">process to chectout</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

{% else %}
  <div class="shopping-cart-detail">
    <div class="container d-flex justify-content-center align-items-center" style="min-height:70vh;">
      <div class="row">
        <div class="col-12 d-flex flex-column align-items-center">
          <h1 class="mb-5">Your Cart is empty</h1>
          <div class="cart_btn">
            <a href="{{ routes.all_products_collection_url }}" class="btn-primary">Continue Shopping</a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}