{% style %}
  .footer {
    padding-top: 20px;
    padding-bottom: 10%;
    background-color: gray;
  }

  .fc-info input::placeholder {
    color: black;
    font-size: 14px;
  }

  .f-desc {
    transition: all 300ms ease-in-out;
    animation: descAnimate 300ms ease-in-out forwards;
  }

  .rotate {
    transform: rotateX(180deg);
  }

  @keyframes descAnimate {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0px);
    }
  }

  @media screen and (min-width: 1024px) {
    .footer .desk {
      display: flex;
    }

    .mob {
      display: none;
    }
  }

  .footer {
    background: #FEFEF3;
    padding-top: 50px;
    padding-bottom: 2%;
    background-size: contain;
    background-position: bottom;
    position: relative;
  }

  .footer-bg {
    padding-bottom: 15%;
  }
{% endstyle %}

{% if section.settings.menu.links == blank %}
  {% assign footer_menu_linklist = linklists[section.settings.menu].links %}
{% else %}
  {% assign footer_menu_linklist = section.settings.menu.links %}
{% endif %}

