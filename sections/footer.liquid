<script>

// Sticky menu
	var $window = $(window);
	$window.on('scroll', function () {
     
		var scroll = $window.scrollTop();
		if (scroll < 300) {
			$(".sticky").removeClass("fixed");
		} else {
			$(".sticky").addClass("fixed");
		}
	});



  

  const descriptionBtns = document.querySelectorAll(".fdescBtn");
  const desctiptions = document.querySelectorAll(".f-desc");
  const descriptionBtnIcon = document.querySelectorAll(".fdescBtn i");

  descriptionBtns.forEach((descriptionBtn, index) => {
    descriptionBtn.addEventListener("click", () => {
      if (desctiptions[index].classList.contains("hidden")) {
        desctiptions[index].classList.remove("hidden");
        descriptionBtnIcon.classList.add("rotate");

      } else if (! desctiptions[index].classList.contains("block")) {

        desctiptions[index].classList.add("hidden");
      }
    })
  })
</script>