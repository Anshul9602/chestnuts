<div class="my-5 py-5">
  <div class="container flex flex-col items-center">
    <div class="login-title text-center">
      <h1 class="font-Mukta uppercase text-[26px]">Reset your password</h1>
    </div>
    <div class="form-container my-5 flex flex-col gap-y-5">
      <div class="login-form min-w-[280px] md:min-w-[448px] md:max-w-md w-full">
        {% form 'reset_customer_password' %}
          {% if form.errors %}
            <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
              <strong class="font-bold font-Mukta">Error!</strong>
              <p class="block sm:inline font-Mukta">{{ form.errors | default_errors }}</p>
            </div>
          {% endif %}
          <div class="flex flex-col gap-y-8 w-full">

            <div class="password_input w-full flex flex-col gap-y-2">
              <div class="password_label w-full flex items-center justify-between">
                <label for="password" class="uppercase tracking-[2px] text-[13px] font-Mukta">Password</label>
              </div>
              <div class="password_input w-full">
                <input
                  id="password"
                  type="password"
                  autocomplete="off"
                  class="w-full bg-transparent border border-[#c1c1c1] px-3 py-2 text-[18px] font-Mukta"
                  name="customer[password]">
              </div>
            </div>

            <div class="cpassword_input w-full flex flex-col gap-y-2">
              <div class="cpassword_label w-full flex items-center justify-between">
                <label for="cpassword" class="uppercase tracking-[2px] text-[13px] font-Mukta">Confirm Password</label>
              </div>
              <div class="cpassword_input w-full">
                <input
                  id="cpassword"
                  type="password"
                  autocomplete="off"
                  class="w-full bg-transparent border border-[#c1c1c1] px-3 py-2 text-[18px]"
                  name="customer[password_confirmation]">
              </div>
            </div>


            <div class="login_btn">
              <button type="submit" class="w-full py-3 text-white bg-primary uppercase text-[14px] rounded-sm tracking-[2px] hover:text-primary hover:bg-white border-2 border-primary transition-all font-Mukta">Reset Password</button>
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>