{% style %}
  .banner-shadow {
    box-shadow: 0 1px 2px rgb(0 0 0 / 20%);
  }
{% endstyle %}

<div class="px-5 pb-10">
  <div>
    <div class="flex-row justify-between hidden md:flex">
      <div class="basis-[49.3%]">
        <a href="#" class="banner-shadow block w-full rounded-md">
          <div>
            <img src="https://cdn.shopify.com/s/files/1/0721/4887/7629/t/4/assets/Small-banner-1.jpg?v=1678275588" alt="b1">
          </div>
        </a>
      </div>

      <div class="basis-[49.3%]">
        <a href="#" class="banner-shadow block w-full rounded-md">
          <div>
            <img src="https://cdn.shopify.com/s/files/1/0721/4887/7629/t/4/assets/Small-banner-2.jpg?v=1678275605" alt="b2">
          </div>
        </a>
      </div>
    </div>

    <div class="product-slide_container md:hidden">
      <div
        class="splide"
        id="home_b1Slider"
        role="group"
        aria-label="Splide Basic HTML Example">
        <div class="splide__track">
          <ul class="splide__list">

            <li class="splide__slide">
              <a href="#" class="banner-shadow block w-full rounded-md">
                <div>
                  <img
                    src="https://www.fnp.com/assets/images/custom/new-desk-home/hero-banners/Desk-Hero-Banner-flowers(1).jpg"
                    alt="b1"
                    class="rounded-md">
                </div>
              </a>
            </li>

            <li class="splide__slide">
              <a href="#" class="banner-shadow block w-full rounded-md">
                <div>
                  <img
                    src="https://www.fnp.com/assets/images/custom/new-desk-home/hero-banners/Desk-Hero-Banner-cake-genric(1).jpg"
                    alt="b2"
                    class="rounded-md">
                </div>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-5 mt-5">
    <a href="#" class="banner-shadow block w-full rounded-md">
      <div>
        <img
          src="https://assets.winni.in/groot/2023/01/30/desktop/birthday-card-desktop.jpg"
          alt="bcd"
          class="rounded-md">
      </div>
    </a>

    <a href="#" class="banner-shadow block w-full rounded-md">
      <div>
        <img
          src="	https://assets.winni.in/groot/2023/01/30/desktop/anniversary-card-desktop.jpg"
          alt="bcd"
          class="rounded-md">
      </div>
    </a>

    <a href="#" class="banner-shadow block w-full rounded-md">
      <div>
        <img
          src="https://assets.winni.in/groot/2023/01/30/desktop/deals-card-desktop.jpg"
          alt="bcd"
          class="rounded-md">
      </div>
    </a>

    <a href="#" class="banner-shadow block w-full rounded-md">
      <div>
        <img
          src="https://assets.winni.in/groot/2023/02/17/desktop/best-seller-card-desktop.jpg"
          alt="bcd"
          class="rounded-md">
      </div>
    </a>
  </div>
</div>

<script>
  new Splide('#home_b1Slider', {
    type: "loop",
    pagination: false,
    perPage: 1,
    perMove: 1,
    gap: "15px"

  }).mount();
</script>