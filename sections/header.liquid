  .dropdown-content {
    background-color: #fff;
    margin: 0;
    overflow-y: auto;
    opacity: 0;
    visibility: hidden;
    position: absolute;
    left: 0;

    top: 18px;
    z-index: 9999;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    transform: translateY(-10px);
    transform: translateY(-10px);
    transition: all 200ms ease-in-out;

    box-shadow: 0 2px 2px 0 rgb(0 0 0 / 14%), 0 3px 1px -2px rgb(0 0 0 / 12%), 0 1px 5px 0 rgb(0 0 0 / 20%);
  }

  .partner:hover .dropdown-content {
    display: block;
    width: 170px;
    transform: translateY(0px);
    visibility: visible;
    transform-origin: 0 0;
    opacity: 1;

  }
.bg-primary {
  --tw-bg-opacity: 1;
  background-color: rgb(137 78 63 / var(--tw-bg-opacity)) !important;
}
  #dropdownpartner li {
    padding: 0 10px;
  }

  .dropdown-content li {
    min-height: 36px;
  }

  .dropdown-content li {
    clear: both;
    color: rgba(0, 0, 0, 0.87);
    cursor: pointer;
    min-height: 50px;
    line-height: 1.5rem;
    width: 100%;
    text-align: left;
  }

  nav ul li {
    -webkit-transition: background-color 0.3s;
    transition: background-color 0.3s;
    float: left;
    padding: 0;
  }

  .dropdown-content li > a {
    font-size: 13px;
  }

  header .sup-nav a {
    padding: 0 10px;
    color: #333;
  }

  li > a {
    text-transform: capitalize;
  }

  .nav-currency {
    transition: all 200ms ease-in-out;
  }

  .icon-wrapper {
    width: 1.4rem;
    height: 1.4rem;
  }

  .gc-mm-wrapper.fixed {
    position: fixed;
    top: 0;
    left: 0;
    /* visibility: hidden; */
    overflow: hidden;
    transition: all 0.2s ease-in-out;
    transition-delay: 0.5s;
  }

  .gc-mm-wrapper {
    z-index: 990;
  }

  .gc-mm-wrapper.fixed .gc-mm-header {
    height: 100%;
    overflow: hidden;
    cursor: pointer;
    display: flex;
    width: 100%;
    justify-content: center;
  }

  .gc-mm-wrapper.fixed .gc-mm-content {
    visibility: hidden;
  }

  .gc-mm-wrapper.active-mm .gc-mm-content {
    visibility: visible;
  }

  .gc-icon-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  .gc-icon-wrapper i {
    font-size: 30px;
    color: #fff;
  }

  .gc-mm-wrapper.fixed .gc-mm-header .gc-header-text {
    transform: translate3d(-200%, 0, 0);
    transition: transform 0.3s ease-in-out;
  }

  .gc-mm-wrapper.active-mm {
    width: 100%;
    height: 100%;
    max-width: 1280px;
    background: #f2f2f2;
    transition: all 0.3s ease-in-out;
    transition-delay: 0s;
    /* visibility: visible; */
  }

  .slideUp {
    display: block;
    animation: slideUP 200ms ease-in-out forwards;
    transition: all 200ms ease-in-out;
  }
.desk_menu{
  display:block;
}
  .mob_menu{
    display:none;
  }
  @keyframes slideUP {
    from {
      transform: translateY(5px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
@media screen and (max-width:768px) {
  .mob_menu{
  display:block !important;
}
    .desk_menu{
  display:none;
}
  .d_none{
      display:none !important;
    }
