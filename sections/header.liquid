<script>

	

  
  const gcMenuMainLinks = document.querySelectorAll(".gcMenu-mainLink");
  const gcMenuChildLinks = document.querySelectorAll(".gcMenu-childLinks");


  gcMenuMainLinks.forEach((mainLink, index) => {
    mainLink.addEventListener("click", () => {
      const mainLinkIcon = mainLink.lastElementChild;
      const gcMenuGrandChildLinks = document.querySelectorAll(".gcMenu-grandChildLinks");
      console.log(gcMenuGrandChildLinks);

      if (mainLinkIcon.classList.contains("bx-plus")) {
        mainLinkIcon.classList.remove("bx-plus");
        mainLinkIcon.classList.add("bx-minus");
        gcMenuChildLinks[index].classList.add("slideUp");

        gcMenuGrandChildLinks.forEach((grandChild, k) => {
          grandChild.addEventListener("click", () => {
            const grandChildIcon = grandChild.lastElementChild;
            const grandChildSibling = grandChild.nextElementSibling;

            if (grandChildIcon.classList.contains("bx-plus")) {
              grandChildIcon.classList.remove("bx-plus");
              grandChildIcon.classList.add("bx-minus");
              grandChildSibling.classList.add("slideUp");
            } else {
              grandChildIcon.classList.add("bx-plus");
              grandChildIcon.classList.remove("bx-minus");
              grandChildSibling.classList.remove("slideUp");
            }
          })
        });
      } else {
        mainLinkIcon.classList.add("bx-plus");
        mainLinkIcon.classList.remove("bx-minus");
        gcMenuChildLinks[index].classList.remove("slideUp");
      }



    })
  });
</script>

<script>
  const gcMenuWrapper = document.querySelector(".gc-mm-wrapper");
  const gcMenuIcon = document.querySelector(".gc-icon-wrapper i");
  const gcIconWrapper = document.querySelector(".gc-icon-wrapper");

  gcIconWrapper.addEventListener("click", () => {
    if (gcMenuIcon.classList.contains("bx-menu")) {
      gcMenuIcon.classList.remove("bx-menu");
      gcMenuIcon.classList.add("bx-x");
      gcMenuWrapper.classList.add("active-mm");
      document.querySelector("body").style.overflow = "hidden";
    } else {
      gcMenuIcon.classList.add("bx-menu");
      gcMenuIcon.classList.remove("bx-x");
      gcMenuWrapper.classList.remove("active-mm");
      document.querySelector("body").style.overflow = "auto";
    }

  });
</script>

